<h1><%= @movie.title %></h1><br>
<p><%= @movie.creation_year %></p>
<p><%= @movie.genre %></p>
<br>
<% @actors.each do |actor| %>
  <div id="actor-<%= actor.id %>">
    <h3><%= actor.name %></h3>
    <p><%= actor.age %></p>
    <br>
  </div>
<% end %>
<br>
<div>
  <h3>Add an actor to this movie</h3>
  <%= form_with url: "/movies", method: :post, local: true do |form| %>
    <%= form.label "Actor ID:" %>
    <%= form.number_field :id %>
    <%= form.submit %>
  <% end %>
</div>
